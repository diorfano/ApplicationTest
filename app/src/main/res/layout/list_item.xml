<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_listItemLayout"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/view_clicked_states"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_listItemPreview"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:contentDescription="@string/image_title"
        android:padding="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/image" />

    <TextView
        android:id="@+id/tv_listItemTitle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:padding="4dp"
        android:singleLine="true"
        android:text="@string/image_title"
        style="@style/TextStyle" />

    <ImageView
        android:id="@+id/iv_startIntentIcon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:padding="4dp"
        android:src="@mipmap/ic_navigate_next_black_24dp" />

</LinearLayout>